{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"isolatedModules": true,
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": [
			"@rsbuild/core/types"
		],
		"paths": {
			"@/*": ["src/*"],
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
			"@assets/*": ["./src/assets/*"],
			"@hooks/*": ["./src/hooks/*"]
		}
	},
	"include": [
		"src/**/*"
	]
}
